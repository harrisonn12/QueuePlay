# Production Environment Variables
# Copy this file to .env.prod and fill in your production values

# === AUTHENTICATION ===
JWT_SECRET=your-production-jwt-secret-key-here

# === SUPABASE DATABASE ===
SUPABASE_URL=https://your-production-project.supabase.co
SUPABASE_KEY=your-production-anon-key
SUPABASE_USERNAME=your-production-email@example.com
SUPABASE_PASSWORD=your-production-password

# === REDIS ===
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# === OPENAI ===
OPENAI_API_KEY=your-production-openai-api-key

# === STRIPE (Optional) ===
STRIPE_PUBLIC_KEY=pk_live_your-stripe-public-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key

# === DATABASE ===
DATABASE_URL=postgresql://postgres:password@your-db-host:5432/queueplay_prod

# === FRONTEND ===
VITE_API_URL=https://your-production-api-domain.com
VITE_WS_URL=wss://your-production-ws-domain.com

# === STAGE ===
STAGE=prod